package akka.stream.scaladsl

import akka.stream.scaladsl.FlowGraph.FlowGraphBuilder
import akka.stream.scaladsl.Graphs.{ Graph, Ports, InPort }

trait SinkApply {

  def apply[In]()(buildBlock: FlowGraphBuilder => InPort[In]): Sink[In, Unit] = {
    val builder = new FlowGraphBuilder
    val port = buildBlock(builder)
    builder.buildSink(port)
  }

  def apply[In, Mat](g1: Graph[Ports, Mat])(buildBlock: FlowGraphBuilder => (g1.Ports) => InPort[In]): Sink[In, Mat] = {
    val builder = new FlowGraphBuilder
    val p = builder.importGraph(g1, Keep.right)
    val port = buildBlock(builder)(p)
    builder.buildSink(port)
  }

